<style>
  svg#black-hole .highlight-1 {
    fill: var(--colors-primary-100);
  }

  svg#black-hole .highlight-2 {
    fill: var(--colors-primary-200);
  }

  svg#black-hole .highlight-3 {
    fill: var(--colors-primary-300);
  }

  svg#black-hole #hole-0 {
    fill: var(--colors-primary-400);
  }
  svg#black-hole #hole-1 {
    fill: var(--colors-primary-500);
  }
  svg#black-hole #hole-2 {
    fill: var(--colors-primary-600);
  }
  svg#black-hole #hole-3 {
    fill: var(--colors-neutral-800);
  }
  svg#black-hole #hole-4 {
    fill: var(--colors-neutral-900);
  }
</style>
<div style={{ width: "100%", maxWidth: "400px" }}>
  <svg id="black-hole" viewBox="0 0 74 74" xmlns="http://www.w3.org/2000/svg">
    <g id="color">
      <circle class="highlight-1" cx="34" cy="32" r="30"></circle>
      <circle class="highlight-2" cx="42" cy="38" r="30"></circle>
      <circle class="highlight-3" cx="33" cy="44" r="30"></circle>
    </g>
    <!-- <g id="hair" /> -->
    <!-- <g id="skin" /> -->
    <!-- <g id="skin-shadow" /> -->
    <g id="line">
      {
        Array(5)
          .fill(null)
          .map((_, i) => (
            <circle
              id={"hole-" + i}
              cx={i % 2 === 0 ? 36 : 38}
              cy={(i + 1) % 2 === 0 ? 36 : 37}
              r={30 - Math.pow(i, 1.5) * 2}
              fill="none"
              class="line"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-miterlimit="10"
              stroke-width="2"
            />
          ))
      }
    </g>
  </svg>
</div>
